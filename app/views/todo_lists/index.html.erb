<% if current_user %>
  <h1>Your todo lists
    <%=link_to 'New Todo', new_todo_list_path, class: 'btn btn-primary' %>
  </h1>
<% end %>

<ul class="list-group">
  <% @todo_lists&.each do |todo_list| %>
    <% if todo_list.title.present? %>
      <li class="list-group-item">
        <%= link_to todo_list.title, todo_list_path(todo_list) %>
        <ul class="list-group">
          <% todo_list.tasks&.each do |task| %>
            <li class="list-group-item">
              <%= task.description %>
            </li>
          <% end %>
        </ul>
      </li>
    <% end %>
  <% end %>
</ul>

